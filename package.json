{
    "name": "chatapp-turbo",
    "private": true,
    "scripts": {
        "build": "turbo build",
        "dev:backend": "turbo dev --filter=backend",
        "dev:frontend": "turbo dev --filter=frontend",
        "dev": "turbo dev",
        "lint": "turbo lint --",
        "start": "turbo start",
        "format:write": "prettier --write \"**/*.{ts,js,tsx,md}\"",
        "format:check": "prettier --check \"**/*.{ts,js,tsx,md}\"",
        "prepare": "husky"
    },
    "devDependencies": {
        "husky": "^9.1.7",
        "lint-staged": "^15.5.0",
        "prettier": "^3.2.5",
        "turbo": "^2.3.3",
        "typescript": "5.5.4"
    },
    "packageManager": "pnpm@9.0.0",
    "engines": {
        "node": ">=18"
    },
    "lint-staged": {
        "*.{ts,tsx,md}": [
            "pnpm lint",
            "pnpm format:write"
        ]
    }
}
